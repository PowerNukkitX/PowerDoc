{
  "title": "PowerDoc文档",
  "author": [
    "超神的冰凉"
  ],
  "pages": {
    "path": "./PowerDoc文档",
    "recursion": true,
    "filter": ".*"
  },
  "processflow": {
    "processors": [
      {
        "id": "copy-resources",
        "use": "copy-file",
        "args": {
          "copies": {
            "./image": "./html/image",
            "./template/css": "./html/css"
          }
        }
      }
    ]
  },
  "workflow": {
    "outputPath": "./html",
    "steps": [
      {
        "id": "render-markdown",
        "use": "markdown",
        "args": {
          "cssClass": {
            "h1": "mdui-text-color-theme"
          }
        }
      },
      {
        "id": "generate-catalogue",
        "use": "catalogue",
        "args": {
          "cssClass": {
            "p": "category-title mdui-text-color-theme",
            "ol": "category-sub"
          }
        }
      },
      {
        "id": "generate-html",
        "use": "html-format",
        "args": {
          "templatePath": "./template/zh-cn.html",
          "placeholders": {
            "md": "markdown.rendered",
            "catalogue": "html.catalogue",
            "title": "file.noExtName",
            "relativePrefix": "file.rootRelativePrefix"
          }
        }
      }
    ]
  }
}