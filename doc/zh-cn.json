{
  "title": "PowerDoc文档",
  "author": [
    "超神的冰凉"
  ],
  "pages": {
    "path": "./PowerDoc文档",
    "recursion": true,
    "filter": ".*"
  },
  "processflow": {
    "processors": [
      {
        "id": "copy-resources",
        "use": "copy-file",
        "args": {
          "copies": {
            "./image": "./html/image",
            "./css": "./html/css"
          }
        }
      }
    ]
  },
  "workflow": {
    "outputPath": "./html",
    "steps": [
      {
        "id": "render-markdown",
        "use": "markdown"
      },
      {
        "id": "generate-catalogue",
        "use": "catalogue"
      },
      {
        "id": "generate-html",
        "use": "html-format",
        "args": {
          "templatePath": "./template/zh-cn.html",
          "placeholders": {
            "md": "markdown.rendered",
            "catalogue": "html.catalogue",
            "title": "file.noExtName"
          }
        }
      }
    ]
  }
}